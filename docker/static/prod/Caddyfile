:80 {
    handle_path /static* {
        root * /srv/static
        encode zstd gzip
        file_server

        # Long cache for hashed assets
        @hashed path_regexp hashed ^/static/.+\.[0-9a-f]{8,}\.
        header @hashed Cache-Control "public, max-age=31536000, immutable"

        # Default cache
        header /static/* Cache-Control "public, max-age=3600"
    }
    respond 404
}
