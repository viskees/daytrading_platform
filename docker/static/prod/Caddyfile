:80 {
    handle_path /static* {
        root * /srv/static
        encode zstd gzip
        file_server

        @hashed path_regexp hashed ^/.+\.[0-9a-f]{8,}\.
        header @hashed Cache-Control "public, max-age=31536000, immutable"

        header /* Cache-Control "public, max-age=3600"
    }

    handle_path /media* {
        root * /srv/media
        encode zstd gzip
        file_server
        header /* Cache-Control "public, max-age=300"
    }

    respond 404
}
