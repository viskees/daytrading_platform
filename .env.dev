# Django
PROJECT_NAME=daytrading_app
DJANGO_SECRET_KEY=replace-with-strong-secret
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=yourdomain.com

# DB
POSTGRES_DB=daytrading
POSTGRES_USER=daytrading_app
POSTGRES_PASSWORD=replace-db-pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# pgAdmin (optional; consider not exposing in prod)
PGADMIN_DEFAULT_EMAIL=you@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=replace-strong-pgadmin-pass

# Traefik / TLS
TRAEFIK_EMAIL=you@yourdomain.com
TRAEFIK_DOMAIN=yourdomain.com   # public DNS points here

# File ownership inside containers
UID=1000
GID=1000
