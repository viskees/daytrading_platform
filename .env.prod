# =========
# Core / Django (prod)
# =========
PROJECT_NAME=daytrading_app

DJANGO_SECRET_KEY=replace-with-strong-prod-secret
DJANGO_DEBUG=0
# Only the public hostname where Django is served
DJANGO_ALLOWED_HOSTS=yourdomain.com
DJANGO_SETTINGS_MODULE=core.settings
PYTHONPATH=/app/app

# =========
# Database (prod)
# =========
POSTGRES_DB=daytrading
POSTGRES_USER=daytrading_app   # explicit; no ${PROJECT_NAME} expansion here
POSTGRES_PASSWORD=replace-strong-prod-db-pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =========
# pgAdmin (prod)
# =========
PGADMIN_DEFAULT_EMAIL=you@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=replace-strong-pgadmin-prod-pass

# =========
# Traefik / TLS (prod)
# =========
TRAEFIK_EMAIL=you@yourdomain.com       # Letâ€™s Encrypt account email
TRAEFIK_DOMAIN=yourdomain.com          # public DNS pointing to your VPS

# =========
# File ownership inside containers (prod)
# =========
UID=1000
GID=1000